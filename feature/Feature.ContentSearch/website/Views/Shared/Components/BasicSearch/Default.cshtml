@model Feature.ContentSearch.Models.SearchResponse

<style>
    /* Global Styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
    }

    h1 {
        margin-bottom: 20px;
    }

    h2 {
        margin-top: 0;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    /* Search Box Styles */
    .search-box {
        margin-bottom: 20px;
    }

        .search-box form {
            display: flex;
        }

        .search-box input[type="text"] {
            flex: 1;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px 0 0 5px;
        }

        .search-box button {
            padding: 5px 10px;
            border: none;
            background-color: #333;
            color: #fff;
            border-radius: 0 5px 5px 0;
            cursor: pointer;
        }

    /* Facets Styles */
    .facets {
        float: left;
        width: 200px;
        margin-right: 20px;
    }

    .facet {
        margin-bottom: 20px;
    }

        .facet h3 {
            margin-top: 0;
            font-size: 16px;
            color: #333;
        }

        .facet ul li {
            margin-bottom: 5px;
        }

            .facet ul li a {
                text-decoration: none;
                color: #333;
            }

    /* Search Results Styles */
    .search-results {
        margin-left: 220px; /* Account for facet column width */
    }

    .search-item {
        margin-bottom: 20px;
        padding: 10px;
        background-color: #f0f0f0;
        border-radius: 5px;
    }

        .search-item h3 {
            margin-top: 0;
            font-size: 18px;
            color: #333;
        }

        .search-item ul li {
            margin-bottom: 5px;
            font-size: 14px;
            color: #666;
        }

    /* Pagination Styles */
    .pagination {
        clear: both;
        margin-top: 20px;
    }

        .pagination ul {
            display: flex;
            justify-content: center;
        }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a {
                text-decoration: none;
                padding: 5px 10px;
                border: 1px solid #ccc;
                color: #333;
                font-size: 14px;
            }

                .pagination li a:hover {
                    background-color: #f0f0f0;
                }

</style>

<h1>Search Results</h1>

<!-- Search Box -->
<div class="search-box">
    <form action="" method="get">
        <input type="text" name="keyword" placeholder="Enter your search query" value="@Model.keyword">
        <button type="submit">Search</button>
    </form>
</div>

<!-- Facets -->
<div class="facets">
    <h2>Facets</h2>
    @foreach(var facet in Model.search.facets){
        <div class="facet">
            <h3>@facet.name</h3>
            <ul>
                @foreach(var facetValue in facet.values){
                    <li><a href="#">@facetValue.value (@facetValue.count)</a></li>
                }
            </ul>
        </div>
    }
</div>

<!-- Search Results -->
<div class="search-results">
    <h2>Search Results</h2>
    <!-- Include your search result items here -->
    <!-- Example: -->
    @foreach (var item in Model.search.results.items)
    {
        <div class="search-item">
            <h3>@item.name</h3>
            <ul>
                <li><strong>ID:</strong> @item.id</li>
                <li><strong>Name:</strong> @item.name</li>
                <li><strong>Path:</strong> @item.path</li>
                <li><strong>Template Name:</strong> @item.templateName</li>
                <li><strong>Language:</strong> @item.language</li>
                <li><strong>Version:</strong> @item.version</li>
                <li><strong>Score:</strong> @item.score</li>
            </ul>
        </div>
    }
</div>

<!-- Pagination -->
<div class="pagination">
    <ul>
        <li><a href="#">Previous</a></li>
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <!-- Include more page numbers as needed -->
        <li><a href="#">Next</a></li>
    </ul>
</div>


